<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="PMD Exclusions" xmlns="http://pmd.sourceforge.net/ruleset/2.0.0">
    <description>Exclude DTO & Entity boilerplate from duplication check</description>

    <!-- Ignore DTOs -->
    <exclude-pattern>.*/dto/.*</exclude-pattern>

    <!-- Ignore JPA entities -->
    <exclude-pattern>.*/model/.*</exclude-pattern>
</ruleset>
