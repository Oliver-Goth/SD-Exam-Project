# === MySQL Settings (used by Docker Compose) ===
MYSQL_ROOT_PASSWORD=secret
MYSQL_DATABASE=mtogo
MYSQL_USER=mtogo_user
MYSQL_PASSWORD=secret

# === Ports ===
BACKEND_PORT=8080
GATEWAY_PORT=9000
# Host port for MySQL; container still listens on 3306
MYSQL_PORT=3307

# === Spring Datasource (internal container URL)
SPRING_DATASOURCE_URL=jdbc:mysql://db:3306/mtogo?allowPublicKeyRetrieval=true&useSSL=false
SPRING_DATASOURCE_USERNAME=mtogo_user
SPRING_DATASOURCE_PASSWORD=secret
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true


